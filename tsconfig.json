{
  "compilerOptions": {
      "target": "es5",
      "lib": ["esnext", "dom"],
      "module": "commonjs",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
          "*": [
              "node_modules/*",
              "src/types/*"
          ]
      },
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "downlevelIteration": true,
      "resolveJsonModule": true,
      "jsx": "react",
      "noUnusedLocals": true
  },
  "include": [
      "src/**/*"
  ]
}
